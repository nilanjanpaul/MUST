  <!-- Format and description:
  <_grp_rx_ sync="now" rx_freq="1900e6" rx_rate="5e6" rx_gain="10">  
    <device type="n210" ip="192.168.101.102">
      <ch rx_dll_obj="" rx_bw="25e6" rx_ant="RX2"
	  tx_dll_obj="" tx_gain="20" tx_bw="25e6" tx_ant="TX/RX" />
    </device>

